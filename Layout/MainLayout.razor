@inherits LayoutComponentBase
@inject HttpClient Http

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool _sentLogin = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_sentLogin)
        {
            _sentLogin = true;

            var loginInfo = new LoginInfoDto
            {
                Username = "admin", // Replace with dynamic value if available
                Password = "password"
            };

            try
            {
                await Http.PostAsJsonAsync("api/register", loginInfo);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Login info failed: {ex.Message}");
            }
        }
    }

    public class LoginInfoDto
    {
        public string Username { get; set; }
        public string Password { get; set; }
    }
}
